<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proyectotiti.download">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/proyectotiti"
        android:layout_centerHorizontal="true"
        android:paddingTop="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESCARGAR FAMILIAS"
        android:textSize="18sp"
        android:layout_below="@+id/logo"
        android:paddingTop="0dp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="132dp"
        tools:layout_editor_absoluteX="101dp" />

    <Button
        android:id="@+id/continueButton"
        style="@android:style/Widget.Button"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:text="SIGUENTE"
        android:textColorLink="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteY="460dp"
        tools:layout_editor_absoluteX="234dp" />

    <Button
        android:id="@+id/backButton"
        style="@android:style/Widget.Button"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:text="ANTERIOR"
        android:textColorLink="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="460dp"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="281dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="170dp">


        <SearchView
            android:layout_width="281dp"
            android:layout_height="20dp"
            android:iconifiedByDefault="false"
            android:queryHint="Busca AquÃ­" />

        <ScrollView
            android:layout_width="281dp"
            android:layout_height="250dp"
            android:layout_below="@+id/number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp">
            <LinearLayout
                android:layout_width="281dp"
                android:layout_height="250dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="170dp">
                <CheckBox
                    android:id="@+id/checkBox_family1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="familia 1" />

                <CheckBox
                    android:id="@+id/checkBox_family2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="familia 2" />

                <CheckBox
                    android:id="@+id/checkBox_family3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="familia 3" />

                <CheckBox
                    android:id="@+id/checkBox_family4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="familia 4" />

                <CheckBox
                    android:id="@+id/checkBox_family5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="familia 5" />

                <CheckBox
                    android:id="@+id/checkBox_family6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="familia 6" />

                <CheckBox
                    android:id="@+id/checkBox_family7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="familia 7" />

                <CheckBox
                    android:id="@+id/checkBox_family8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="familia 8" />
                <CheckBox
                    android:id="@+id/checkBox_family9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="familia 9" />
                <CheckBox
                    android:id="@+id/checkBox_family10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="familia 10" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
