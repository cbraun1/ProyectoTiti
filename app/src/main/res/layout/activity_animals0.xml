<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proyectotiti.animals0">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/proyectotiti"
        android:layout_centerHorizontal="true"
        android:paddingTop="0sp"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 de 5"
        android:textSize="18sp"
        android:layout_below="@+id/logo"
        android:paddingTop="0sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANIMALES"
        android:textSize="18sp"
        android:layout_below="@+id/number"
        android:paddingTop="0sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/continueButton"
        style="@android:style/Widget.Button"
        android:layout_width="150sp"
        android:layout_height="52sp"
        android:text="SIGUENTE"
        android:textColorLink="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteY="460sp"
        tools:layout_editor_absoluteX="234sp"
        android:onClick="openMadera0"/>

    <Button
        android:id="@+id/backButton"
        style="@android:style/Widget.Button"
        android:layout_width="150sp"
        android:layout_height="52sp"
        android:text="ANTERIOR"
        android:textColorLink="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="460sp"
        tools:layout_editor_absoluteX="0sp"
        android:onClick="openBasicData"/>

    <ScrollView
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_below="@+id/number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13sp">
        <LinearLayout
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:orientation="horizontal">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textViewWildAnimals"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:text="Animales Silvestres"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingTop="10sp"
                    android:textSize="19sp" />

                <ImageButton
                    android:id="@+id/imageButtonEdit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_edit"
                    android:onClick="openAnimals2"
                    tools:ignore="ContentDescription"/>

                <ImageButton
                    android:id="@+id/imageButtonDelete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_delete"
                    tools:ignore="ContentDescription"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_wild"
                android:layout_width="281sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="52sp"
                tools:layout_editor_absoluteY="188sp">

            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/textViewAnimal1"-->
                <!--android:layout_width="88sp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="18sp"-->
                <!--android:textColor="#000000"-->
                <!--android:text="Animal 1" />-->
            <!--<TextView-->
                <!--android:id="@+id/textViewAnimal2"-->
                <!--android:layout_width="88sp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="18sp"-->
                <!--android:textColor="#000000"-->
                <!--android:text="Animal 2" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewPets"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:layout_weight="0.94"
                    android:text="Animales Domesticos"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="19sp" />

                <ImageButton
                    android:id="@+id/imageButtonEdit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_edit"
                    android:onClick="openAnimals4"
                    tools:ignore="ContentDescription"/>

                <ImageButton
                    android:id="@+id/imageButtonDelete2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_delete"
                    tools:ignore="ContentDescription"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_domestic"
                android:layout_width="281sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="52sp"
                tools:layout_editor_absoluteY="188sp">

            </LinearLayout>
