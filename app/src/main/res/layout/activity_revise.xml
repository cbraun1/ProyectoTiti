<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proyectotiti.revise">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/proyectotiti"
        android:layout_centerHorizontal="true"
        android:paddingTop="0dp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REVISAR"
        android:textSize="18sp"
        android:layout_below="@+id/logo"
        android:paddingTop="0dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/continueButton"
        style="@android:style/Widget.Button"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:text="SIGUENTE"
        android:textColorLink="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteY="460dp"
        tools:layout_editor_absoluteX="234dp" />

    <Button
        android:id="@+id/backButton"
        style="@android:style/Widget.Button"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:text="ANTERIOR"
        android:textColorLink="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="460dp"
        tools:layout_editor_absoluteX="0dp" />

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/number"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textViewWildAnimals"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_toLeftOf="@+id/continueButton"
                    android:layout_toStartOf="@+id/continueButton"
                    android:layout_weight="0.94"
                    android:paddingTop="10dp"
                    android:text="Animales Silvestres"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButtonEdit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <ImageButton
                    android:id="@+id/imageButtonDelete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewAnimal1"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_toLeftOf="@+id/continueButton"
                android:layout_toStartOf="@+id/continueButton"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Animal 1" />
            <TextView
                android:id="@+id/textViewAnimal2"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_toLeftOf="@+id/continueButton"
                android:layout_toStartOf="@+id/continueButton"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Animal 2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewWildAnimals"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:paddingTop="10dp"
                    android:layout_toLeftOf="@+id/continueButton"
                    android:layout_toStartOf="@+id/continueButton"
                    android:layout_weight="0.94"
                    android:text="Animales Domesticos"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="19sp" />

                <ImageButton
                    android:id="@+id/imageButtonEdit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <ImageButton
                    android:id="@+id/imageButtonDelete2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>
            <TextView
                android:id="@+id/textViewAnimal3"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_toLeftOf="@+id/continueButton"
                android:layout_toStartOf="@+id/continueButton"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Animal 3" />
            <TextView
                android:id="@+id/textViewAnimal4"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_toLeftOf="@+id/continueButton"
                android:layout_toStartOf="@+id/continueButton"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Animal 4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textViewConstructions"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_toLeftOf="@+id/continueButton"
                    android:layout_toStartOf="@+id/continueButton"
                    android:layout_weight="0.94"
                    android:paddingTop="10dp"
                    android:text="Construcciones"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButtonEdit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <ImageButton
                    android:id="@+id/imageButtonDelete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewConstruction1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_toLeftOf="@+id/continueButton"
                android:layout_toStartOf="@+id/continueButton"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Construccion 1" />
            <TextView
                android:id="@+id/textViewConstruction2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_toLeftOf="@+id/continueButton"
                android:layout_toStartOf="@+id/continueButton"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Construccion 2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewFences"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_toLeftOf="@+id/continueButton"
                    android:layout_toStartOf="@+id/continueButton"
                    android:layout_weight="0.94"
                    android:paddingTop="10dp"
                    android:text="Cercados"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButtonEdit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <ImageButton
                    android:id="@+id/imageButtonDelete2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewFence1"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_toLeftOf="@+id/continueButton"
                android:layout_toStartOf="@+id/continueButton"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Cercado 1" />
            <TextView
                android:id="@+id/textViewFence2"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_toLeftOf="@+id/continueButton"
                android:layout_toStartOf="@+id/continueButton"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Cercado 2" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
